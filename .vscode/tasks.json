{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tauri: start frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/examples/asr-app"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Local:.*http://localhost:1420.*"
                }
            }
        },
        {
            "label": "tauri: dev",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "tauri",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/examples/asr-app"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*"
                }
            }
        }
    ]
}